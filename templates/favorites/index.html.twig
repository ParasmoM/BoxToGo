{% extends 'base.html.twig' %}

{% block title %}Hello FavoritesController!{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/favori.js') }}" defer></script>
<script src="{{ asset('js/btn-lang.js') }}" defer></script>
{% endblock %}

{% block body %}
<div class="favorite">
    <div class="favorite__container">

        <header class="favorite__header">

            {% include "layout/header-alt.html.twig" %}

        </header>

        <h1 class="favorite__title">Favoris</h1>
        
        <div class="favorite__content">
            <div class="favorite__content-container">

                {% for favori in favorites %}

                    {% set space = favori.space %}

                    {% include "components/_card-space.html.twig" %}

                {% endfor %}

            </div>
        </div>

    </div>
</div>
{% endblock %}
