<div class="detail-host-card">

    <h1 class="detail-host-card__title">Faites connaissance avec {{ name }}</h1>

    <div class="detail-host-card__content">

        <a href="{{ path('public_owner_profile', {'id': space.host.id}) }}" class="detail-host-card__link">
            <img src="{{ asset('assets/uploads/Archives/Photos/' ~ space.host.id ~ '/Profile/' ~ space.host.image.imagePath) }}" alt="Image de profile">
        </a>

        <article class="detail-host-card__profile">

            <h3 class="detail-host-card__profile--title">
                <a href="{{ path('public_owner_profile', {'id': space.host.id}) }}">{{ space.host.familyName|capitalize }}  {{ space.host.givenName|capitalize }}</a>
            </h3>

            <div class="detail-host-card__profile--desciption">
                {{ space.host.content.getDescriptionBasedOnLanguage(space.host.language)|capitalize }}
            </div>

        </article>

        <article class="detail-host-card__details">

            <div class="detail-host-card__details--labels">

                <p>Notes globale :</p>
                <p>Nombres d’évaluations :</p>
                <p>Années d’expérience :</p>
                <p>Statut :</p>
                <p>Email :</p>
                <p>Téléphone :</p>
                <p>Langues :</p>
                <p>Taux de réponse :</p>
                <p>Délai de réponse :</p>

            </div>

            <div class="detail-host-card__details--values">

                <p>{{ space.calculateAverageRating }}</p>
                <p>{{ space.review|length }}</p>
                {% set duration = space.host.calculateYearsAndMonthsSinceRegistration %}
                <p>{{ duration[0] }} {{ duration[1] }}</p>
                <p>{{ space.host.status }}</p>
                <p>{{ space.host.email }}</p>
                <p>{{ space.host.phoneNumber }}</p>
                <p>{{ space.host.language }}</p>
                <p>****</p>
                <p>****</p>

            </div>

        </article>

    </div>

</div>