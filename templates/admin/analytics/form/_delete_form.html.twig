{% set path = type == "Category" ? 'app_space_types_delete' : 
    type == "Amenities" ? 'app_space_amenities_delete' : 
    type == "Admins" ? 'app_admin_delete' : '' 
%}

<form method="post" class="utils__category-item" action="{{ path(path, {'id': instance.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    {% if type == 'Admins' %}
        <span>{{ instance }}</span>
    {% else %}
        <span>{{ instance.getName(app.request.locale) }}</span>
    {% endif %}
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ instance.id) }}">
    <button class="btn"><img src="{{ asset('images/icones/admin/cross.svg') }}" alt="Delete"></button>
</form>
