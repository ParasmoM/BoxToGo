{% extends 'template-alt.html.twig' %}

{% block title %}Hello SettingsController!{% endblock %}

{% set menuItems = ['account'|trans, 'address'|trans, 'notifications'|trans, 'preferences'|trans, 'security'|trans, 'payments'|trans] %}

{% block main %}
<div class="settings">
    <div class="settings__container">

        <h1 class="settings__title">{{ 'Settings'|trans }}</h1>

        <nav class="settings__navbar">

            {% for menuItem in menuItems %}

                <a class="button {% if route == 'public_' ~ menuItem %}active{% endif %}" href="{{ path('public_' ~ menuItem, {'id': app.user.id}) }}">{{ menuItem|capitalize }}</a>
            
            {% endfor %}

        </nav>

        <section class="settings__content">
            <div class="settings__content-container">

                {% block content %}{% endblock content %}

            </div>
        </section>

    </div>
</div>
{% endblock %}
