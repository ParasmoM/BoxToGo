{% extends 'base.html.twig' %}

{% block title %}Hello PropertyDetailsController!{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/masthead.js') }}" defer></script>
<script src="{{ asset('js/property_detail.js') }}" defer></script>
{% endblock %}

{% set images = [] %}
{% for image in space.image %}
    {% set images = images|merge([image.imagePath]) %}
{% endfor %}

{% set spaceCateg = space.spaceCateg|capitalize ? false %}
{% set adresse = space.adresse.first ? space.adresse.first.city|capitalize : false %}

{% set rating = space.calculateAverageRating %} 
{% block body %}

<section class="space-detail">
    <div class="space-detail__container">

        <header class="space-detail__header">
            {% include "layout/header-main.html.twig" %}
        </header>
        
        <main class="space-detail__content">
            <div class="space-detail__content-container">

                <section class="space-detail__gallery">
                    {% include "property_details/_gallery.html.twig" %}
                </section>
                
                <section class="space-detail__info">
                    {% include "property_details/_info.html.twig" %}
                </section>

                <section class="space-detail__reviews">
                    {% include "property_details/_review.html.twig" %}
                </section>

                <section class="space-detail__host">
                    {% include "components/_detail-host-card.html.twig" with {'name': 'votre h√¥te'} %}
                </section>
                
            </div>
        </main>

    </div>
</section>

{% endblock %}

